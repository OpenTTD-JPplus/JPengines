								string(STR_CONCAT_1C,
									string(STR_SUFFIX_JNR)
								)
							);
		default: switch_oyu10_livery;
		purchase: sw_mail_oyu10_purchase;
		cargo_subtype_text: switch_oyu10_subtype_text;
	}
}
